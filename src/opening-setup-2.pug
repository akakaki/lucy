include ./templete/mixin.pug
doctype html
html(lang="zh-TW")
  include ./templete/head.pug
  body
    +common
    .container.flex
      +nav('boy')
      .content
        +header()
        .content-article#opening-setup-2.flex.flex-col
          .vacancies__top.flex
            a.vacancies-back.flex.items-center(href="opening-setup-1.html")
              .vacancies-back__icon.icon.icon-16px.icon-back
              .vacancies-back__label.font.color-black 返回
            -
              const PROGRESS_WRAP = [
                { label: '職缺名稱', active: true },
                { label: '選擇問題', active: true },
                { label: '成功創建' },
              ]
            .vacancies__progress
              +progress(PROGRESS_WRAP)
          .vacancies__content-setup-2
            .vacancies__content-setup-2__container.flex
              .vacancies__content-left
                .vacancies__content.flex
                  .vacancies__input__data
                    .vacancies-setup__title.flex.items-center
                      .vacancies-setup__icon.number__icon 2
                      .vacancies-setup__label.font.text-24px OOOOO 職缺
                .vacancies-setup-2__data
                  .vacancies-setup-2__data__title.flex.items-center
                    .vacancies-setup-2__data__icon.icon.icon-20px.icon-user
                    .vacancies-setup-2__data__label.font.text-18px 露西題庫
                    .vacancies-setup-2-lang__title.button.white
                      .vacancies-setup-2-lang__icon.icon.icon-18px.icon-earth
                      .vacancies-setup-2-lang__label English

                  .vacancies-setup-2__data__tips.flex.items-center.justify-between
                    .opening-setup-2__path__list.flex.items-center

                  .vacancies-setup-2-level.flex
                    .vacancies-setup-2-level-1__list

                    .vacancies-setup-2-level-2__list

                    .vacancies-setup-2-level-3__list

              .vacancies__content-setup-2__chose.flex.flex-col.justify-between.flex-1
                .vacancies__content-setup-2__top.flex.items-center.justify-between
                  .vacancies__content-setup-2__chose__title.flex.items-center
                    .vacancies__content-setup-2__chose__icon.icon.icon-edit.icon-20px
                    .vacancies__content-setup-2__chose__label.font.text-18px 您選擇的題目
                  .vacancies__content-setup-2__chose__button.flex.items-center.button.white
                    .vacancies__content-setup-2__chose__button__icon.icon.icon-18px.icon-plus.mr-10px
                    .vacancies__content-setup-2__chose__button__label 客製題目
                .vacancies__content-setup-2__chose__container.flex.flex-col.flex-1

                .vacancies__content-setup-2__chose__list
                .vacancies__content-setup-2__chose__bottom
                  a.vacancies__content-setup-2__chose__bottom-save.button.white
                    .icon.icon-18px.icon-save
                    .vacancies__content-setup-2__chose__bottom-save-label 儲存草稿
                  a.vacancies__content-setup-2__chose__bottom-next.button.black(href="opening-setup-3.html")
                    .icon.icon-18px.icon-back.icon-rotate-180.bg.bg-white
                    .vacancies__content-setup-2__chose__bottom-save-label 下一步

