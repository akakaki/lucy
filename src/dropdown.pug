    .container.flex
      +nav('boy')
      .content
        +header()
        .content-article.opening
          .opening-title.flex.items-center.justify-between
            +h1('職缺')
            button.opening-build__button.button.green.shadow
              .opening-build__icon.icon.icon-18px.icon-user
              .opening-build__label 創建職缺
          form.opening-form__wrap.flex.items-end
            .field
              label.label 職缺名稱
              select.input
                option(value="0" disabled selected) 請選擇職缺名稱
                option(value="1") 1
                option(value="2") 2
            .field
              label.label 創建日期
              .form__input__date.input.flex.items-center
                input(id="date-before" type="date")
                | -
                input(id="date-after" type="date")
                .form__input__date__icon.icon.icon-18px.icon-calendar

            .opening-count__data.flex.flex-col.items-end
              div 目前方案｜企業版
              div 職缺數｜2/5

          .opening__wrap
              .opening-top__title
              .opening-top__title
                .opening-top__label 創建時間
                .opening-top__arrow
              .opening-top__title
                .opening-top__label 職缺名稱
              .opening-top__title
                .opening-top__label 應徵人數
              .opening-top__title
                .opening-top__label 職缺填寫需求與檔案上傳
              .opening-top__title
