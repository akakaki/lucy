include ./templete/mixin.pug
doctype html
html(lang="zh-TW")
  include ./templete/head.pug
  body
    .container.flex
      +nav('boy')
      .content
        +header()
        .content-article.vacancies
          .vacancies__top.flex
            .vacancies-back.flex.items-center
              .vacancies-back__icon.icon.icon-16px.icon-back
              .vacancies-back__label 返回

            -
              const PROGRESS_WRAP = [
                { label: '職缺名稱', active: true },
                { label: '選擇問題', active: true },
                { label: '成功創建' },
              ]
            .vacancies__progress
              +progress(PROGRESS_WRAP)

          .vacancies__content.flex
            .vacancies__input__data
              .vacancies-setup__title
                .vacancies-setup__icon 2
                .vacancies-setup__label OOOOO 職缺
          .vacancies__content-setup-2.flex
            .vacancies__content-setup-2__container.flex
              .vacancies-setup-2__data
