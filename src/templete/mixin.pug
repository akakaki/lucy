mixin h1(text)
  h1.page-title.font.text-24px= text

mixin notification-list(title, list)
  .notification__wrap
    .notification__title.font.text-16px= title
    .notification__container
      ul.notification__list
        for value in list
          li.notification__item.flex.items-center.mb-22px
            if value.tips
              .notification__tips.mr-13px.dot
            else
              .notification__tips.mr-13px.dot.dot-red
            
            if value.picture
              img.notification__picture.bg.bg-green(src=value.picture)
            else if value.icon
              .notification__picture.bg.bg-green.flex.items-center.justify-center
                .icon.icon-18px(class=value.icon)
            else
              .notification__picture.bg.bg-green
            .notification__detail.flex-1
              .notification__label.flex.justify-between.mb-5px
                .label=value.label
                .date=value.date
              .notification__text=value.text

mixin switch(list)
  .switch__list.flex.items-center
    for value in list
      .switch__item(class=`${value.id} ${value.active ? 'active' : ''}`)
        span.label= value.label
          if value.dot
            .dot.dot-red

mixin input-wrap(value)
  .form__item
    if value.required
      label.form__label.label(for=value.id)= value.label
        span *
    else
      label.form__label.label(for=value.id)= value.label
    input.form__input.input(id=value.id placeholder=value.placeholder name=value.id)
    .form__text.font.text-12px= value.text

mixin textarea-wrap(value)
  .form__item
    if value.required
      label.form__label.label(for=value.id)= value.label
        span *
    else
      label.form__label.label(for=value.id)= value.label
    .form__textarea__wrap
      textarea.form__textarea(id=value.id placeholder=value.placeholder)

mixin select-wrap(value)
  .form__item
    if value.required
      label.form__label.label(for=value.id)= value.label
        span *
    else
      label.form__label.label(for=value.id)= value.label
    select.select(id=value.id)

//- 進度條
mixin progress(list)
  .progress__wrap
    .progress__container.flex.item-center
      each item, index in list
        if item.active
          .progress__item.flex.flex-col.items-center.active
            .progress__number.flex.justify-center.items-center= index + 1
              .progress__line
            .progress__label.font.text-12px= item.label
        else
          .progress__item.flex.flex-col.items-center
            .progress__number.flex.justify-center.items-center= index + 1
              .progress__line
            .progress__label.font.text-12px= item.label

