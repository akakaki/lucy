mixin header(id='')
  header.header__wrap.bg.bg-white
    .header__container.flex.items-center.justify-end.py-29px.px-50px
      .header__tool.flex.items-center
        .header__icon.icon.icon-20px.icon-search
        input.header__search__wrap.hidden.mx-8px(type="text" placeholder="請輸入求職者名稱")
      .header__tool
        .header__icon.icon.icon-20px.icon-notification.icon-red-dot
        .remind__message__wrap.bg.bg-white.hidden
          .remind__message__container
            .remind__message__top.flex.items-center
              .remind__message__icon
              .remind__message__title.font.text-18px 通知
              a.remind__go.flex(href="notification.html")
                .remind__go-text 查看全部通知
                .remind__go-icon
            .remind__message__list
              +notification-list('今日通知', notificationMessageToday)
              +notification-list('先前通知', NOTIFICATION_LIST_BEFORE)
      .header__tool
        .header__icon.icon.icon-20px.icon-profile
        .header__member__wrap.bg.bg-white.hidden
          .remind__member__container
            .remind__member__title.flex.items-center
              .remind__member__icon.icon.icon-20px.icon-user
              .remind__member__label.font.text-18px 諾比科技
            .remind__member__list
              for value in headerList
                if value.id === id
                  a.remind__member__item.my-4px.flex.items-center.active(href=value.href)
                    .remind__member__icon.bg.bg-black.icon.icon-20px(class=value.icon)
                    .remind__member__text.font.text-16px.color-black= value.label
                else
                  a.remind__member__item.my-4px.flex.items-center(href=value.href)
                    .remind__member__icon.bg.bg-black.icon.icon-20px(class=value.icon)
                    .remind__member__text.font.text-16px.color-black= value.label

